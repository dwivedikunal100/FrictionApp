<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Friction does not make any network calls itself (no cloud sync, local-only).
        This config blocks cleartext for safety and future-proofing.
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
