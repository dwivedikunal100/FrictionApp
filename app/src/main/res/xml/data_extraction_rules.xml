<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction / backup rules for Android 12+.
    Room DB and DataStore are excluded from cloud backup since they contain
    user-configured app lists â€” data is local by design.
-->
<data-extraction-rules>
    <cloud-backup>
        <exclude domain="database" path="friction_database" />
        <exclude domain="sharedpref" path="friction_prefs" />
        <exclude domain="sharedpref" path="usage_tracker" />
    </cloud-backup>
    <device-transfer>
        <exclude domain="database" path="friction_database" />
    </device-transfer>
</data-extraction-rules>
